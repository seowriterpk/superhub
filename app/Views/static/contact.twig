
{% extends "base.twig" %}

{% block content %}
<div class="container mx-auto px-4 py-8 max-w-4xl">
    <h1 class="text-3xl font-bold mb-8">Contact Us</h1>
    
    <div class="grid md:grid-cols-2 gap-8">
        <div>
            <h2 class="text-2xl font-bold mb-4">Get in Touch</h2>
            <p class="text-gray-300 mb-6">
                Have questions or need support? We're here to help. Contact us using the information below.
            </p>
            
            <div class="space-y-4">
                <div>
                    <h3 class="font-semibold mb-2">General Inquiries</h3>
                    <p class="text-gray-300">
                        <a href="mailto:{{ site_settings.contact_email|default('contact@example.com') }}" 
                           class="text-red-400 hover:text-red-300">{{ site_settings.contact_email|default('contact@example.com') }}</a>
                    </p>
                </div>
                
                <div>
                    <h3 class="font-semibold mb-2">DMCA Notices</h3>
                    <p class="text-gray-300">
                        <a href="mailto:{{ site_settings.dmca_email|default('dmca@example.com') }}" 
                           class="text-red-400 hover:text-red-300">{{ site_settings.dmca_email|default('dmca@example.com') }}</a>
                    </p>
                </div>
            </div>
        </div>
        
        <div class="bg-gray-800 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4">Business Hours</h3>
            <div class="space-y-2 text-gray-300">
                <p>Monday - Friday: 9:00 AM - 6:00 PM</p>
                <p>Saturday: 10:00 AM - 4:00 PM</p>
                <p>Sunday: Closed</p>
            </div>
            
            <div class="mt-6">
                <h4 class="font-semibold mb-2">Response Time</h4>
                <p class="text-gray-300 text-sm">
                    We typically respond to inquiries within 24-48 hours during business days.
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
